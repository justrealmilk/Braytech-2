<Page x:ConnectionId='1'
    x:Class="Braytech_2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Braytech_2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Braytech_2.Models"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlAcrylicWindowBrush}">

    <Grid>
        <GridView x:ConnectionId='2'                                               SelectionMode="None" IsItemClickEnabled="False" IsSwipeEnabled="False" CanDragItems="False" HorizontalAlignment="Left" Margin="40" VerticalAlignment="Top">
            <GridView.ItemTemplate>
                <DataTemplate                       >
                    <StackPanel x:ConnectionId='3' Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Stretch" MinWidth="Infinity">
                        <Grid>
                            <Image x:ConnectionId='6'                        Width="48" HorizontalAlignment="Left" />
                            <Border BorderBrush="#b5b5b5" BorderThickness="2"></Border>
                            <Border Background="#b5b5b5" HorizontalAlignment="Right" VerticalAlignment="Bottom" MinWidth="16" Padding="2,0,2,0">
                                <TextBlock x:ConnectionId='7' FontSize="12"                          Foreground="#000000" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>                            
                        </Grid>
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Padding="10,0,10,0">
                            <TextBlock x:ConnectionId='4' FontSize="16"                      />
                            <TextBlock x:ConnectionId='5' FontSize="12"                      />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

    </Grid>
</Page>

